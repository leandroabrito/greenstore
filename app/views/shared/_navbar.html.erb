<div class="navbar navbar-expand-lg navbar-light bg-light justify-content: space-between">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "https://i.ibb.co/44f2f9B/green-store.png", :style=>"margin-left: -45px; width:400px; :height:90px;" %>
  <% end %>
  <form class="form-inline my-2 my-lg-0" style="margin: 90px 80px 0px -20px; padding-top: 20px;">
    <input class="form-control mr-sm-2" style="width: 600px;" type="search" placeholder="Search" aria-label="Search">
    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
  </form>

  <% if user_signed_in? %>
    <li class="nav-item dropdown" style="list-style: none;padding-top: 20px;">
      <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
      <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
        <%= link_to "Action", "#", class: "dropdown-item" %>
        <%= link_to "Another action", "#", class: "dropdown-item" %>
        <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
      </div>
    </li>
  <% else %>
    <li class="nav-item" style="list-style: none; padding-top: 20px;">
      <%= link_to "Login", new_user_session_path, class: "nav-link" %>
    </li>
  <% end %>
</div>

